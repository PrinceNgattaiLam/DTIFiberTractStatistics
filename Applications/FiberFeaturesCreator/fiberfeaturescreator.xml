<?xml version="1.0" encoding="utf-8"?>
<executable>
    <category>Sampling</category>
    <title>Fiber Features Creator</title>
    <description>Sampling of a bundle of fibers</description>
    <version>1.0</version>
    <contributor>Ngattai Lam Prince, Juan Carlos Prieto, Martin Styner</contributor>
   <acknowledgements>
    This work is part of the project for the University Of North Carolina, Neuro Image Research and Analysis Laboratories.
  </acknowledgements>
    <parameters>
      <label>I/O</label>
        <geometry>
            <name>inputFiber</name>
            <label>Input fibers</label>
            <channel>input</channel>
            <longflag>input</longflag>
            <description>Input fibers</description>
        </geometry>
        <integer>
              <name>nbLandmarks</name>
              <flag>N</flag>
              <description>
              Number of landmarks
              </description>
              <label>Number of landmarks</label>
              <default>5</default>
        </integer>
        <geometry>
            <name>outputFiber</name>
            <label>Output Volume</label>
            <channel>output</channel>
            <longflag>output</longflag>
            <description>Output fibers</description>
        </geometry>
        <geometry>
            <name>modelFiber</name>
            <label>Model Fibers</label>
            <channel>input</channel>
            <longflag>model</longflag>
            <description>Model fibers</description>
        </geometry>
        <file>
            <name>fcsvFile</name>
            <label>FCSV File</label>
            <channel>input</channel>
            <longflag>fcsv</longflag>
            <description>FCSV File that contains the landmarks to compute</description>
            <default></default>
        </file>
      </parameters>
      <parameters>
        <label>Features</label>
        <string-enumeration>
          <name>FeaturesChoice</name>
          <flag>f</flag>
          <longflag>features</longflag>
          <description>Features to compute</description>
          <label>Choice of Features to computer</label>
          <default>Landmarks</default>
          <element>Landmarks</element>
          <element>Curvatures</element>
          <element>Torsions</element>
        </string-enumeration>
    </parameters>
</executable>